
@{
    ViewBag.Title = "List";
}


<h2>Product List</h2>

@if (ViewBag.Error != null)
{
    <div class="warning">@ViewBag.Error</div>
}



<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Item Name</th>
        <th>Item Description</th>
        <th>Item Price</th>
   
   
        <th></th>
    </tr>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.ItemId</td>
            <td>@product.ItemName</td>
            <td>@product.ItemDescription</td>
            <td>@product.ItemPrice</td>
           
            

            <td>
                <a href="@Url.Action("Edit", "Products", new {id = product.ItemId })" class="btn btn-primary btn-sm">
                    Edit
                </a>
                <a href="@Url.Action("Delete", "Products", new {id = product.ItemId })" class="btn btn-primary btn-danger" >
                    Delete
                </a>
                <a href="@Url.Action("Add Image", "Image", new {id = product.ItemId })" class="btn btn-primary btn-info">
                    Add Image
                </a>
            </td>
        </tr>
    }
</table>