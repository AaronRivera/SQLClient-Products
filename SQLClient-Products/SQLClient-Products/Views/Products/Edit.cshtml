
@{
    ViewBag.Title = "Edit";
}


<h2>Edit Product</h2>

@if (ViewBag.Error != null)
{
    <div class="warning">@ViewBag.Error</div>
}

<form action="@Url.Action("Edit", "Products", new { id = Model.ItemId })" method="post">
    <div class="form-group">
        <label for="itemName">Item Name</label>
        <input type="text" class="form-control" id="itemName" name="itemName" required placeholder="Enter Item name" value="@Model.ItemName">
    </div>
    <div class="form-group">
        <label for="itemDescription">Description</label>
        <input type="text" class="form-control" id="description" name="itemDescription" required placeholder="Enter Description" value="@Model.ItemDescription">
    </div>
    <div class="form-group">
        <label for="itemPrice">Price</label>
        <input type="text" class="form-control" id="itemPrice" name="itemPrice" required placeholder="Enter Price" value="@Model.ItemPrice">
    </div>

    <div class="form-group">
        <label for="itemUrl">Url</label>
        <input type="text" class="form-control" id="itemUrl" name="itemUrl" required placeholder="Enter Url" value="@Model.ItemUrl">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form>

